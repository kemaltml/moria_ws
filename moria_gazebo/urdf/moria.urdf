      </geometry>
    </visual>
    
    <collision>
      <origin rpy="0 0 0" xyz="0.015 0 -0.0065"/>
      <geometry>
        <cylinder length="0.0315" radius="0.055"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="0.114"/>
      <origin xyz="0 0 0"/>
      <inertia 
        ixx="0.001" 
        ixy="0.0" 
        ixz="0.0" 
        iyy="0.001" 
        iyz="0.0" 
        izz="0.001"/>
    </inertial>
  </link>
  
  
  <!-- ::::::::::BACK LIDAR SENSOR:::::::::: -->
  <joint name="scan_joint_b" type="fixed">
    <parent link="base"/>
    <child link="base_scan_b"/>
